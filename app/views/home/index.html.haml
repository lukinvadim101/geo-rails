%h1.text-center Home Geo

- if Rails.env.production?
  %h2 current location
  %p= @country or '--'
  %p= @city or '-'


%table.w-100
  %tr
    %th Location
    %th X
    %th Y
    %th
  - @private_locations.each do |location|
    %tr
      %td= location.name
      %td= location.latitude
      %td= location.longitude
      %td= link_to 'Show', location
      -# %td= link_to 'Edit', edit_location_path(location)
      -# %td= button_to 'Remove', location, :confirm => 'Are you sure?', :method => :delete